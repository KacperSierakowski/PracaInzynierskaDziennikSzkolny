@model IEnumerable<DziennikSzkolny13.Models.Plik>

@{
    ViewBag.Title = "Pliki";
}

<h2>Pliki</h2>

<p>
    @Html.ActionLink("Dodaj Plik", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NazwaPliku)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UrlPliku)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NazwaPliku)
        </td>
        <td>
            <a href="~/Content/WgranePliki/@item.UrlPliku">@Html.DisplayFor(modelItem => item.UrlPliku)</a>
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.ID }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
