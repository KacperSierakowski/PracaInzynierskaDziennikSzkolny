<div>
    <h3>Lista ocen ucznia:</h3>
    @if (User.IsInRole("Administrator") || User.IsInRole("Nauczyciel"))
    {
        <p>
            @Html.ActionLink("Dodaj Ocenę", "CreateOcenasFromUczens", new { id = Model.ID })
        </p>
    }
    @Html.Partial("ListaOcenUcznia", Model.OcenyUcznia)
</div>

<p>
    @if (User.IsInRole("Administrator"))
    {
        @Html.ActionLink("Edytuj", "Edit", new { id = Model.ID })
        @Html.ActionLink("Powrót do listy wszystkich uczniów", "Index")
    }
    else if (User.IsInRole("Nauczyciel"))
    {
        @Html.ActionLink("Powrót do listy wszystkich uczniów", "Index")
    }
    else
    {
        @Html.ActionLink("Powrót", "Index")
    }
</p>
